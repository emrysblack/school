###############################################################
# The main programs are:
#    dateTest   : test the date class
###############################################################
out : dateTest.o date.o
	g++ -o out dateTest.o date.o

###############################################################
# Individual files
###############################################################
date.o : date.cpp date.h
	g++ -c date.cpp

dateTest.o : dateTest.cpp date.h
	g++ -c dateTest.cpp

###############################################################
# General rules
###############################################################
clean :
	rm out *.o

all :  out

###############################################################
# Ref: http://www.gnu.org/software/make/manual/make.html
###############################################################