#include <iostream>
#include "set.h"
#include "goFish.h"
using namespace std;

/**********************************************************************
 * GO FISH
 * The function which starts it all
 ***********************************************************************/
void goFish()
{
   cout << "We will play 5 rounds of Go Fish.  Guess the card in the hand\n";
   string guess;
   for (int i = 0; i < 5; i++)
   {
      cout << "round " << i + 1 << ": ";
      cin >> guess;
      cout << "\tGo Fish!\n";
   }
   return ;
}
