// test for a simple sqrt algorithm
#include <iostream>
using namespace std;

int main()
{
   float num;

   cout << "Enter the number to find the root: ";
   cin >> num;

   // compute the root
   float big = num;
   float small = 0;
   float error = .0000001;
   while (big - small > error || big - small < -error)
   {
      // take average
      big = (big + small) / 2;
      small = num / big;
   }

   // display result
   cout << "The Square root of " << num << " is " << big << endl;
   cout <<  small << " squared is " << small * small << endl;
   return 0;
}
